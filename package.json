{
  "name": "devvy-cli",
  "version": "2.0.0",
  "description": "Devvy - Development Environment CLI",
  "main": "dist/index.js",
  "bin": {
    "devvy": "./devvy"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:debug": "NODE_ENV=development tsx --inspect src/index.ts",
    "build": "npm run clean && tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "compile": "npm run build && npm run make-executable",
    "make-executable": "chmod +x devvy && echo '#!/usr/bin/env node' | cat - dist/index.js > temp && mv temp devvy",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "biome": "biome check --write",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "biome check --write",
      "bash -c 'npm run typecheck'"
    ]
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "tsconfig-paths": "^4.2.0",
    "which": "^4.0.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/dockerode": "^3.3.23",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/which": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "docker",
    "development",
    "environment",
    "cli",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
