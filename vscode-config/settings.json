{
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingComments": "beforeWhitespace",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.fontFamily": "'SF Mono', monospace",
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
  "editor.fontSize": 13,
  "editor.fontWeight": "400",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "editor.guides.indentation": true,
  "editor.insertSpaces": true,
  "editor.largeFileOptimizations": false,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.renderWhitespace": "none",
  "editor.rulers": [120],
  "editor.scrollbar.verticalScrollbarSize": 4,
  "editor.stickyScroll.enabled": false,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.wordWrap": "on",
  "errorLens.enabledDiagnosticLevels": ["warning", "info", "error"],
  "errorLens.messageEnabled": true,
  "errorLens.statusBarColorsEnabled": true,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.astro": "astro",
    "*.css": "tailwindcss"
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "html.autoClosingTags": false,
  "interactiveWindow.executeWithShiftEnter": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "js-auto-backticks.enableRevert": true,
  "json.maxItemsComputed": 10000,
  "keyboard.dispatch": "keyCode",
  "multiCommand.commands": [
    {
      "command": "multiCommand.saveAndEscape",
      "sequence": [
        {
          "command": "workbench.action.files.save"
        },
        {
          "command": "extension.vim_escape"
        }
      ]
    }
  ],
  "notebook.output.wordWrap": true,
  "terminal.integrated.confirmOnExit": "hasChildProcesses",

  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'JetBrainsMono Nerd Font', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "300",

  "typescript.preferences.importModuleSpecifier": "relative",

  // Vim
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.cursorStylePerMode.visual": "underline",
  "vim.cursorStylePerMode.visualblock": "underline-thin",
  "vim.cursorStylePerMode.visualline": "underline",
  "vim.highlightedyank.color": "#ff00ff",
  "vim.highlightedyank.duration": 200,
  "vim.highlightedyank.enable": true,
  "vim.leader": " ",
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindings": [
    {
      "before": ["<Space>", "/"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Space>", "/"],
      "commands": ["editor.action.commentLine"]
    }
  ],

  "window.autoDetectColorScheme": false,
  "window.density.editorTabHeight": "compact",
  "window.newWindowProfile": "Default",

  // Workbench
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ff00ff"
    // "editorGhostText.foreground": "#000000"
    // "editorSuggestWidget.foreground": "#E0FFFF",
    // "editorSuggestWidget.background": "#E0FFFF",
    // "editorInlineHint.foreground": "#E0FFFF",
    // "editorGhostText.foreground": "#E0FFFF"
  }, // Cursor Dark Midnight, Andromeda
  "workbench.editor.editorActionsLocation": "titleBar",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.fontAliasing": "default",
  "workbench.preferredDarkColorTheme": "Cursor Dark",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.sideBar.location": "right",
  "workbench.tips.enabled": true,

  // ZenMode
  "zenMode.fullScreen": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.cmdPFilePicker2": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "diffEditor.renderSideBySide": false,
  "editor.accessibilitySupport": "off",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "terminal.external.osxExec": "Ghostty.app",
  "workbench.colorTheme": "GitHub Light",
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "biome.suggestInstallingGlobally": false
}
