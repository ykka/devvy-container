{
  "name": "Devvy Container",
  "remoteUser": "devvy",
  "workspaceFolder": "/home/devvy/repos",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      },
      "extensions": []
    }
  },
  "remoteEnv": {
    "SHELL": "/bin/zsh"
  },
  "postAttachCommand": "echo 'Welcome to Devvy Container! ðŸš€' && cd ~/repos && echo \"User: $(whoami)\" && echo \"Home: $HOME\" && echo \"Shell: $SHELL\"",
  "attachRunArgs": [
    "--name",
    "claude-devvy-container"
  ]
}
