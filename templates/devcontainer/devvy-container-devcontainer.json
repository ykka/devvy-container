{
  "name": "Devvy Container",
  "remoteUser": "devvy",
  "workspaceFolder": "/home/devvy/repos",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      },
      "extensions": []
    }
  },
  "remoteEnv": {
    "SHELL": "/bin/zsh"
  },
  "postAttachCommand": "cd ~/repos",
  "attachRunArgs": ["--name", "devvy-container"]
}
